{
  "manifest_version": 2,

  "name": "Google Tag Manager Super-Saver",
  "description": "Streamlines your workflow for testing pages in Google Tag Manager",
  "version": "1.0",

  "browser_action": {
   "default_icon": "gtm-saver-icon.png",
   "default_popup": "gtm-saver.html"
  },
  "background": {
    "scripts": ["gtm-saver.js"],
    "persistent": true
  },
  "content_scripts": [ {
   "css": [ "gtm-client.css", "gtm-actions.js", "gtm-reload.js" ],
   "matches": [ "https://tagmanager.google.com/*" ],
   "run_at": "document_end"
} ],
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
   ]
}